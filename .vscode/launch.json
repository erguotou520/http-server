  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'hs'",
      "cargo": {
        "args": [
          "build",
          "--bin=hs",
          "--package=hs"
        ],
        "filter": {
          "name": "hs",
          "kind": "bin"
        }
      },
      "args": ["-f", "examples/dist", "-m", "index", "--custom-404", "/404.html", "-b", "abc", "-P", "/api->https://dogapi.dog"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'hs'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=hs",
          "--package=hs"
        ],
        "filter": {
          "name": "hs",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}